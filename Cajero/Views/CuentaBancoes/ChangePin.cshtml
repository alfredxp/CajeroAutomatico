@model Cajero.Models.USUARIO

@{
    ViewBag.Title = "ChangePin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ChangePin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CuentaBancoViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Card_Number_ID)
    @Html.HiddenFor(model => model.BALANCE_USER_CURRENT_AMT)
    @Html.HiddenFor(model => model.ACCOUNT_USER_CD)
    @Html.HiddenFor(model => model.CEDULA_CD)
    @Html.HiddenFor(model => model.ACCOUNT_TYPE_DESC)


    <div class="form-group">
        @Html.LabelFor(model => model.USER_PIN_CD, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.USER_PIN_CD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.USER_PIN_CD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
